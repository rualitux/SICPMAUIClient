<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoMauiClient2.MainPage"
             Title="SICP">

    <Grid RowDefinitions="*,Auto,Auto,Auto,*" ColumnDefinitions="*,*,*" ColumnSpacing="0" RowSpacing="10">
        <Label Text="Sistema Integrado Móvil de Gestión Patrimonial"
               Grid.Row="0"
               Grid.Column="0"
               ></Label>
        <Label Text="Sistema"
               Grid.Row="1"
               Grid.Column="0"
               ></Label>
        <Image Source="logo_claro.png" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"  ></Image>
        <Button Text="Gestión de Procedimientos" Grid.Row="2" Grid.Column="0"              Grid.ColumnSpan="3"
Clicked="OnProcedimientosClicked" />
        <Button Text="Gestión de Areas" Grid.Row="3" Grid.Column="0"              Grid.ColumnSpan="3"
Clicked="OnAreasClicked" />
    </Grid>


</ContentPage>
