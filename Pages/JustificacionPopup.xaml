<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ToDoMauiClient2.Pages.JustificacionPopup">
    <VerticalStackLayout>
        <Label 
            Text="Ingresa Justificación"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="justificacionEntry"
        Placeholder="Ingresa Justificación"
        Completed="OnJustificacionCompleted" />
        
        <Button Text="Agregar" 
                Clicked="OnAgregarClicked" />
        <Button Text="Volver"
                Clicked="OnVolverClicked" />
    </VerticalStackLayout>
</toolkit:Popup>
